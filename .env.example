# Anthropic API Key (required for default model)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Alternative model providers (optional)
# OPENAI_API_KEY=your_openai_api_key_here
# GOOGLE_API_KEY=your_google_api_key_here

# Repository settings
REPO_PATH=.
# EXAMPLES_OUTPUT_PATH=./examples  # Optional: defaults to <repo>/examples if not set

# LLM Configuration
DEFAULT_MODEL=anthropic:claude-3-5-sonnet-20241022
TEMPERATURE=0.7

# Processing settings
MAX_REFINEMENT_ITERATIONS=3
DISCOVERY_PATHS=src  # Comma-separated subdirs to search for tests (default: src)
# DISCOVERY_PATHS=src,tests  # Example: search multiple directories
